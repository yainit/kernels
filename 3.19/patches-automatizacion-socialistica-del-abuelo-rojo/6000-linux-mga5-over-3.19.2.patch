+int ppsc_biosparam (struct scsi_device * sdev, struct block_device *bdev, sector_t capacity, int ip[])
+{
+	ip[0] = 0x40;
+	ip[1] = 0x20;
+	ip[2] = (unsigned int)(capacity +1) >> 11;
+	if (ip[2] > 1024) {
+		ip[0] = 0xff;
+		ip[1] = 0x3f;
+		ip[2] = (unsigned int)(capacity +1) / (0xff * 0x3f);
+		if (ip[2] > 1023)
+			ip[2] = 1023;
+	}
+	return 0;
+}
