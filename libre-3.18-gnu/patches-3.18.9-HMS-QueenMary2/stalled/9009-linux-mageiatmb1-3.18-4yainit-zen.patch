+ *   - setlease
+ */
+const struct file_operations dazukofs_dir_fops = {
+	.read		= dazukofs_read,
+	.readdir	= dazukofs_readdir,
+	.ioctl		= dazukofs_ioctl,
+	.mmap		= dazukofs_mmap,
+	.open		= dazukofs_open,
