+static int update_cryptcompress_size(struct inode *inode, loff_t new_size,
+				     int update_sd)
+{
+	return (new_size & ((loff_t) (inode_cluster_size(inode)) - 1)
+		? 0 : reiser4_update_file_size(inode, new_size, update_sd));
+}
