+    interruptible_sleep_on(&loops[nr]->wait);
+#endif    
+    if (cmd & IOC_IN) {
+        if (memcmp (arg, loops[nr]->ioctlretdata, _IOC_SIZE(cmd)))
+            return 1;
+    } else {
+        memcpy (arg, loops[nr]->ioctlretdata, _IOC_SIZE(cmd));
+    }
+    return 0;
+}
