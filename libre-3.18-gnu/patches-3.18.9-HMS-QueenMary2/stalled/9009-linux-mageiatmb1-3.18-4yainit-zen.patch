+static void fscbtns_report_orientation(void)
+{
+#ifdef SPLIT_INPUT_DEVICE
+	struct input_dev *idev = fscbtns.idev_sw;
+#else
+	struct input_dev *idev = fscbtns.idev;
+#endif
