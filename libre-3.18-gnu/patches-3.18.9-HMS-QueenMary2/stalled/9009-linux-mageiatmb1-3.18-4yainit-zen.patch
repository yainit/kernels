+++ linux-3.18-tmb1/fs/reiser4/estimate.c	2015-02-21 12:17:17.036608779 +0000
@@ -0,0 +1,129 @@
+/* Copyright 2001, 2002, 2003 by Hans Reiser, licensing governed by
+   reiser4/README */
+
+#include "debug.h"
+#include "dformat.h"
+#include "tree.h"
+#include "carry.h"
