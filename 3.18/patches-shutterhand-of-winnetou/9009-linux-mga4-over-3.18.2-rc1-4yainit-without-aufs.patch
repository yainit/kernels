+
+struct scsi_host_template	driver_template = PPSC_TEMPLATE(t348);
+
+#include "scsi_module.c"
+
+MODULE_LICENSE("GPL");
+
+#else
+
+void t348_setup (char *str, int *ints)
+{
+	ppsc_gen_setup(stt,4,str);
+}
+
+#endif
+
+/* end of t348.c */
