 		l = line + strlen(line);
 		if (l - line > 3 && !strcmp(l-3, ".ko"))
 			*(l-3) = '\0';
+		underscores(line);
 
 		/* skip directory components */
 		if ((basename = strrchr(mod->name, '/')))
 			basename++;
 		else
 			basename = mod->name;
-		if (!strcmp(basename, line))
+		basename = strdup(basename);
+		underscores(basename);
+
+		if (!strcmp(basename, line)) {
+			free(basename);
 			return how;
+		}
+		free(basename);
 	}
